extends layout

block content
	h1 #{title}

	form(method='POST' action='')
		label(for='name') Genre:
		input(id='name' type='text', placeholder='Fantasy, Poetry etc.' name='name' value=(genre=== undefined ? '' : genre.name))
		button(type='submit') Submit

	if errors
		p= errors
		ul
			for error in errors
				li!= error.msg