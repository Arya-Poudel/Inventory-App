extends layout

block content
	h1(style={'text-align': 'center' ,'margin' : '10px 0'}) #{title}

	form.genreform(method='POST' action='')
		label(for='name') Genre:
		input(id='name' type='text', placeholder='Fantasy, Poetry etc.' name='name' required='true' value=(genre=== undefined ? '' : genre.name))
		button.saveBtn(type='submit') Submit

	if errors
		p= errors
		ul
			for error in errors
				li!= error.msg