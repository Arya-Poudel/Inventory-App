extends layout

block content
	div.genre-detail
		h1= genre.name
		ul
			each book in genreBooks
				li.books-genre-link
					a(href=book.url) #{book.title} - #{book.author} 
			else
				p This genre has no books
		div.genre-detail-btns
			a(href=genre.url+'/delete')
				button.deleteBtn Delete genre
			a(href=genre.url+'/update')
				button.saveBtn Update genre

